{% extends 'base.html.twig' %}

{% block title %}{{ propriete.titre }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick-theme.css"/>
{% endblock %}

{% block body %}
    <h1>{{ propriete.titre }}</h1>

    <div class="row">
        <div class="col-md-8">
            <div id="proprieteCarousel" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    {% for photo in propriete.photos %}
                        <div class="carousel-item {% if photo.isPrincipale %}active{% endif %}">
                            <img src="{{ asset(photo.filename) }}" class="d-block w-100" alt="Photo {{ loop.index }}">
                        </div>
                    {% endfor %}
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#proprieteCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Precedente</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#proprieteCarousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Suivante</span>
                </button>
            </div>
        </div>
        <div class="col-md-4">
            <h3>Détails</h3>
            <p><strong>Prix : </strong>{{ propriete.prix|number_format(0, ',', ' ') }} €</p>
            <h4>Caractéristiques</h4>
            <ul>
                {% for accessoire in propriete.accessoires %}
                    <li>{{ accessoire.nom }}</li>
                {% endfor %}
            </ul>
        </div>
    </div>

    <div class="mt-4">
        <h3>Description</h3>
        <p>{{ propriete.description }}</p>
    </div>

    {% if is_granted('ROLE_ADMIN') %}
        <div class="mt-4">
            <h3>Demandes de contact</h3>
            <ul class="list-group">
                {% for contact in propriete.contacts %}
                    <li class="list-group-item">
                        <strong>{{ contact.nom }}</strong> ({{ contact.email }}|{{contact.phone}})
                        <br>Message : {{ contact.message }}
                    </li>
                {% else %}
                    <li class="list-group-item">Aucune demande de contact pour cette propriété.</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
    <script>
        $(document).ready(function(){
            $('#proprieteCarousel').slick({
                dots: true,
                infinite: true,
                speed: 500,
                fade: true,
                cssEase: 'linear'
            });
        });
    </script>
{% endblock %}
