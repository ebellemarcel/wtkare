{% extends 'base.html.twig' %}

{% block title %}{{ propriete.titre }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick-theme.css"/>
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css"/>
{% endblock %}

{% block body %}
<div class="bg-slate-800 text-gray-100">
    <h2 class="text-3xl font-bold mb-6 text-green-400">{{ propriete.titre }}</h2>

    <div class="flex flex-col md:flex-row gap-8">
        <div class="md:w-1/3">
            <div id="proprieteCarousel" class="carousel slide shadow-lg rounded-lg overflow-hidden" data-bs-ride="carousel">
                <div class="carousel-inner">
                    {% for photo in propriete.photo %}
                        <div class="carousel-item {% if photo.isPrincipale %}active{% endif %}">
                            <img src="{{ asset(photo.filename) }}" class="d-block w-100" alt="Photo {{ loop.index }}">
                        </div>
                    {% endfor %}
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#proprieteCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Precedente</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#proprieteCarousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Suivante</span>
                </button>
            </div>
	    <div id="map" class="h-64 rounded-lg shadow-lg"></div>
        </div>
	<div class="md:w-1/3">
        <div class="md:w-1/3 bg-slate-700 p-6 rounded-lg shadow-md">
            <h3 class="text-xl font-semibold mb-4 text-green-300">Détails</h3>
            <p class="mb-4"><strong class="text-yellow-400">Prix : </strong>{{ propriete.prix|number_format(0, ',', ' ') }} €</p>
             <ul class="mb-5">
            <li>Type: {{ propriete.type }}</li>
            <li>Surface: {{ propriete.surface }} m²</li>
            <li>Chambres: {{ propriete.chambres }}</li>
            <li>Adresse: {{ propriete.adresse }}</li>
            <li>Ville: {{ propriete.ville }}</li>
            <li>Code Postal: {{ propriete.codepostal }}</li>
            <li>Latitude: {{ propriete.latitude }}</li>
            <li>Longitude: {{ propriete.longitude }}</li>
            <li>Date de Création: {{ propriete.dateCreation|date('d-m-Y H:i') }}</li>
            <li>Date de Mise à Jour: {{ propriete.dateUpdate|date('d-m-Y H:i') }}</li>
        	</ul>
	   </div> 
	    <div class="bg-slate-700 p-6 rounded-lg shadow-md">
		<h4 class="text-lg font-semibold mb-2 text-green-300">Accessoires</h4>
            	<ul>
                {% for accessoire in propriete.accessoires %}
                    <li>{{ accessoire.nom }}</li>
                {% endfor %}
            	</ul>
           </div>
	</div>
    </div>

    <div class="mt-8">
        <h3 class="text-xl font-semibold mb-4 text-green-300">Description</h3>
        <p class="text-gray-300">{{ propriete.description }}</p>
    </div>

    <div class="mt-8">
            <h3 class="text-xl font-semibold mb-4 text-green-300">Demandes de contact</h3>
            <ul class="bg-slate-700 rounded-lg shadow-md divide-y divide-slate-600">
                {% for contact in propriete.contact %}
                    <li class="p-4">
                        <strong class="text-yellow-400">{{ contact.nom }}</strong>
			<span class="text-gray-400">({{ contact.email }} | {{contact.phone}})</span>
           		<p class="mt-2 text-gray-300">Message : {{ contact.message }}</p>
                    </li>
                {% else %}
                    <li class="p-4 text-gray-400">Aucune demande de contact pour cette propriété.</li>
                {% endfor %}
            </ul>
        </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
    <script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>
    <script>
        $(document).addEventListener('DOMContentLoaded',function(){
            $('#proprieteCarousel').slick({
                dots: true,
                infinite: true,
                speed: 500,
                fade: true,
                cssEase: 'linear'
            });
	   
	    // Initialisation de la carte
        setTimeout(function(){
	var mapElement = document.getElementById('map');
        if (mapElement) {
            var map = L.map('map').setView([{{ propriete.latitude }}, {{ propriete.longitude }}], 13);
            
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
            }).addTo(map);
            
            // Ajout du marqueur
            L.marker([{{ propriete.latitude }}, {{ propriete.longitude }}])
                .addTo(map)
                .bindPopup("{{ propriete.titre }}")
                .openPopup();
        }},100);

        });
    </script>
{% endblock %}
